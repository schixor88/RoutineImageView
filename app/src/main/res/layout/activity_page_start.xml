<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context="com.example.kushagra.routine.pageStart">

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:layout_gravity="top">


    <TextView
        android:textAlignment="center"
        android:textStyle=""
        android:layout_marginTop="25dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exam Routine"
        android:textSize="50sp"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_marginTop="45dp"
        android:textColor="#000000"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        android:textSize="25sp"
        android:text="feri exam ayo, sad life.."/>

    <TextView
        android:layout_marginTop="45dp"
        android:textColor="#000000"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="normal"
        android:textSize="30sp"
        android:text="All the best everyone!"/>

</LinearLayout>
    <LinearLayout
        android:layout_marginLeft="110dp"
        android:layout_marginRight="100dp"
        android:orientation="vertical"
        android:layout_width="150dp"
        android:layout_height="200dp"
        >

        <Button
            android:id="@+id/btn_board"
            android:text="Board"
            android:textSize="20sp"
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="60dp" />

        <Button
            android:id="@+id/btn_pre"
            android:text="Pre-Board"
            android:textSize="20sp"
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="60dp" />



    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="30dp">
        <TextView
            android:textSize="20sp"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="kushagra.com.routine-1"/>

    </LinearLayout>


</LinearLayout>
